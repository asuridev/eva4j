package <%= packageName %>.shared.domain.exception;

import <%= packageName %>.shared.enums.ErrorCode;

/**
 * Exception for duplicate entity errors
 */
public class DuplicateEntityException extends DomainException {
    
    public DuplicateEntityException(String entityName, String fieldName, Object fieldValue) {
        super(
            String.format("%s already exists with %s: '%s'", entityName, fieldName, fieldValue),
            ErrorCode.DUPLICATE_ENTITY,
            entityName,
            fieldName,
            fieldValue
        );
    }
    
    public DuplicateEntityException(String message) {
        super(message, ErrorCode.DUPLICATE_ENTITY);
    }
}
