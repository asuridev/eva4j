<% if (features.includeDocker && dependencies.includes('data-jpa') && databaseType !== 'h2') { %>name: <%= artifactId %>-cluster

services:
<% if (databaseType === 'postgresql') { %>  postgres:
    image: postgres:16-alpine
    container_name: <%= artifactId %>-postgres
    environment:
      POSTGRES_DB: <%= databaseName %>
      POSTGRES_USER: <%= databaseUsername %>
      POSTGRES_PASSWORD: <%= databasePassword %>
    ports:
      - "5432:5432"
    volumes:
      - postgres-data:/var/lib/postgresql/data
    networks:
      - <%= artifactId %>-network
<% } else if (databaseType === 'mysql') { %>  mysql:
    image: mysql:8.0
    container_name: <%= artifactId %>-mysql
    environment:
      MYSQL_DATABASE: <%= databaseName %>
      MYSQL_USER: <%= databaseUsername %>
      MYSQL_PASSWORD: <%= databasePassword %>
      MYSQL_ROOT_PASSWORD: <%= databasePassword %>
    ports:
      - "3306:3306"
    volumes:
      - mysql-data:/var/lib/mysql
    networks:
      - <%= artifactId %>-network
<% } %>

volumes:
<% if (databaseType === 'postgresql') { %>  postgres-data:
<% } else if (databaseType === 'mysql') { %>  mysql-data:
<% } %>

networks:
  <%= artifactId %>-network:
    driver: bridge
<% } %>
