  temporal:
    image: temporalio/auto-setup:1.21.5
    ports:
      - '7233:7233'
    environment:
      - DB=postgresql
      - DB_PORT=5432
      - POSTGRES_USER=temporal
      - POSTGRES_PWD=temporal
      - POSTGRES_SEEDS=postgres_temporal
    depends_on:
      - postgres_temporal

  postgres_temporal:
    image: postgres:16-alpine
    environment:
      - POSTGRES_USER=temporal
      - POSTGRES_PASSWORD=temporal
    ports:
      - '5434:5432'

  temporal-ui:
    image: temporalio/ui:latest
    ports:
      - '8088:8080'
    environment:
      - TEMPORAL_ADDRESS=temporal:7233
    depends_on:
      - temporal
