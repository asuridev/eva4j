package <%= packageName %>.common.config;

<% if (features.includeSwagger && dependencies.includes('web')) { %>import io.swagger.v3.oas.models.OpenAPI;
import io.swagger.v3.oas.models.info.Contact;
import io.swagger.v3.oas.models.info.Info;
import io.swagger.v3.oas.models.info.License;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

/**
 * OpenAPI/Swagger configuration
 */
@Configuration
public class OpenApiConfig {
    
    @Bean
    public OpenAPI customOpenAPI() {
        return new OpenAPI()
                .info(new Info()
                        .title("<%= projectName %> API")
                        .version("<%= version %>")
                        .description("API documentation for <%= projectName %>")
                        .contact(new Contact()
                                .name("<%= author %>")
                                .email(""))
                        .license(new License()
                                .name("MIT")
                                .url("https://opensource.org/licenses/MIT")));
    }
}
<% } else { %>import org.springframework.context.annotation.Configuration;

/**
 * OpenAPI configuration placeholder
 */
@Configuration
public class OpenApiConfig {
    // OpenAPI configuration will be added here when Swagger is enabled
}
<% } %>
